<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="?attr/actionBarSize" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="188dp" >
        <ImageView
            android:id="@+id/activity_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/gray"/>
    </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是一张海报"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
     <TextView
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/activity_poster"
         android:text="活动简介：这是个很吊的活动,真的很吊的活动"
         android:layout_gravity="center"
         android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说点什么"
            android:layout_marginLeft="300dp"
            android:id="@+id/commentCircleBtn"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_alignBaseline="@+id/commentCircleBtn"
            android:layout_alignBottom="@+id/commentCircleBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="53dp"
            android:id="@+id/addCircleContent"
            android:visibility="invisible"
            android:hint="请输入评论内容"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/addCircleContent"
            android:layout_marginLeft="200dp"
            android:id="@+id/btnLinearLayout"
            android:visibility="invisible">
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/commitContent"
                android:text="确定"
                android:textSize="10sp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/cancelCommitContent"
                android:text="取消"
                android:textSize="10sp"/>
        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/circle_comment_listView"
            android:divider="@color/white"
            android:listSelector="@color/white"
            android:layout_below="@+id/addCircleContent"
            android:layout_centerHorizontal="true">
        </ListView>

    </RelativeLayout>

</LinearLayout>