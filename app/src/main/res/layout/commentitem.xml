<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingBottom="0dp">
        <ImageView
            android:id="@+id/userImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/user0"/>
        <TextView
            android:id="@+id/username"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="张三"/>
    </LinearLayout>

    <TextView
        android:id="@+id/input_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/header"
        android:textSize="18dp"
        android:text="有人带我划划水吗"/>

    <ImageView
        android:id="@+id/comment_huifu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/comment_ic"
        android:layout_above="@+id/input_comment"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="14dp" />
    <ImageView
        android:id="@+id/comment_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/unlike"
        android:layout_above="@id/input_comment"
        android:layout_toLeftOf="@id/comment_huifu"
        android:layout_alignTop="@id/comment_huifu"
        android:layout_alignBottom="@id/comment_huifu"
        android:layout_marginRight="5dp"/>

</RelativeLayout>
