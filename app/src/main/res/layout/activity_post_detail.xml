<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#22dbd8d8">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_avatar"
                    android:layout_marginTop="10dp"
                    android:id="@+id/post_detail_ic_owner"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孙哔哔"
                    android:id="@+id/post_detail_name_owner"
                    android:textSize="15sp"
                    android:textColor="@color/goods_detail_price"
                    android:layout_below="@+id/post_detail_ic_owner"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(楼主)"
                    android:layout_below="@id/post_detail_name_owner"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/goods_detail_price"/>
            </RelativeLayout>


            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="好久没打过球了，之前在省队打过一阵子，有没有人要一起的啊"
                android:id="@+id/post_detail_content"
                android:textSize="18sp"
                android:layout_alignTop="@+id/post_detail_ic_owner"
                android:layout_toEndOf="@+id/post_detail_ic_owner"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1.02"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/font_gray"
            android:layout_marginTop="5dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_comment_listView">

        </ListView>
    </LinearLayout>
        <Button
            android:id="@+id/send1"
            android:background="@color/text_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="发表"/>
        <TextView
            android:id="@+id/pl1"
            android:background="@color/text_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/send1"
            android:layout_alignTop="@id/send1"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="评论："/>
        <EditText
            android:id="@+id/input1"
            android:background="@color/text_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pl1"
            android:layout_alignBottom="@id/pl1"
            android:layout_alignTop="@id/send1"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:hint="输入评论"/>
</RelativeLayout>