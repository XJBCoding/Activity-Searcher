<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proj.zhaohuo.commentActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/commentImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/st7"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/commentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="第二十届篮协杯"
            android:textSize="25dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:layout_height="1dp"
        android:background="@color/font_gray"/>
    <ListView
        android:id="@+id/commentList"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:padding="10dp"
        android:layout_below="@id/line"
        android:layout_marginBottom="30dp">
    </ListView>

        <Button
            android:id="@+id/send"
            android:background="@color/text_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="发表"/>
        <TextView
            android:id="@+id/pl"
            android:background="@color/text_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/send"
            android:layout_alignTop="@id/send"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="评论："/>
        <EditText
            android:id="@+id/input"
            android:background="@color/text_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pl"
            android:layout_alignBottom="@id/pl"
            android:layout_alignTop="@id/send"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:hint="输入评论"/>

</RelativeLayout>
